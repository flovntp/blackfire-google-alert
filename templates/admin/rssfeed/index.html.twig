{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_rss_feed_index' %}

{% block main %}
    <h1>{{ 'title.rss_feed_list'|trans }}</h1>
    <table class="table table-striped table-middle-aligned table-borderless">
        <thead>
            <tr>
                <th scope="col">{{ 'label.name'|trans }}</th>
                <th scope="col">{{ 'label.url'|trans }}</th>
                <th scope="col">{{ 'label.active'|trans }}</th>
                <th scope="col" class="text-center"><i class="fa fa-cogs" aria-hidden="true"></i> {{ 'label.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for rss_feed in rss_feeds %}
            <tr>
                <td>{{ rss_feed.name }}</td>
                <td><a href="{{ rss_feed.url }}" target="_blank">{{ rss_feed.url }}</a></td>
                <td>{% if rss_feed.active %}Yes{% else %}No{% endif %}</td>
                <td class="text-right">
                    <div class="item-actions">
                        <a href="{{ path('admin_rss_feed_edit', {id: rss_feed.id}) }}" class="btn btn-sm btn-primary">
                            <i class="fa fa-edit" aria-hidden="true"></i> {{ 'action.edit'|trans }}
                        </a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" align="center">{{ 'rss_feed.no_rss_feeds_found'|trans }}</td>
           </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

{% block sidebar %}
    <div class="section actions">
        <a href="{{ path('admin_rss_feed_new') }}" class="btn btn-lg btn-block btn-success">
            <i class="fa fa-plus" aria-hidden="true"></i> {{ 'action.create_rss_feed'|trans }}
        </a>
    </div>

    {{ parent() }}

    {{ show_source_code(_self) }}
{% endblock %}
