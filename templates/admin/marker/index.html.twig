{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_marker_index' %}

{% block main %}
    <h1>{{ 'title.marker_list'|trans }}</h1>

    <h3>{{ 'title.marker_list_manual'|trans }}</h3>
    <table class="table table-striped table-middle-aligned table-borderless">
        <thead>
            <tr>
                <th scope="col">{{ 'label.title'|trans }}</th>
                <th scope="col">{{ 'label.description'|trans }}</th>
                <th scope="col"><i class="fa fa-calendar" aria-hidden="true"></i> {{ 'label.marker_date'|trans }}</th>
                <th scope="col">{{ 'label.author'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for marker in markers %}
            <tr>
                <td>{{ marker.title }}</td>
                <td>{{ marker.description }}</td>
                <td>{{ marker.date|format_datetime('medium', 'short', '', 'UTC') }}</td>
                <td>{{ marker.author }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" align="center">{{ 'marker.no_markers_found'|trans }}</td>
           </tr>
        {% endfor %}
        </tbody>
    </table>
    
    <br>
    
    <h3>{{ 'title.marker_list_feeds'|trans }}</h3>

    <div class="modal-body">
        <ul class="nav nav-tabs" id="rssFeeds" role="tablist">
            {% for rssFeed in rssFeeds %}
                <li class="nav-item">
                    <button class="nav-link{% if loop.first %} active{% endif %}" data-target="#feeds-{{ rssFeed.id }}" id="{{ rssFeed.id }}-tab" data-toggle="tab" role="tab" aria-controls="feeds-{{ rssFeed.id }}" 
                       aria-selected="{% if loop.first %}true{% else %}false{% endif %}">
                        From {{ rssFeed.name }}
                    </button>
                </li>
            {% endfor %}
        </ul>

        <div class="tab-content" id="rssFeedsContent">
            
            {% for rssFeed in rssFeeds %}
            
            <div class="tab-pane{% if loop.first %} show active{% endif %}" id="feeds-{{ rssFeed.id }}" role="tabpanel" aria-labelledby="{{ rssFeed.id }}-tab">
                <table class="table table-striped table-middle-aligned table-borderless">
                    <thead>
                    <tr>
                        <th scope="col">{{ 'label.title'|trans }}</th>
                        <th scope="col">{{ 'label.description'|trans }}</th>
                        <th scope="col"><i class="fa fa-calendar" aria-hidden="true"></i> {{ 'label.marker_date'|trans }}</th>
                        <th scope="col">{{ 'label.author'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for feed in rssFeed.getFeeds() %}
                        <tr>
                            <td><a class="info" href="{{ feed.link }}" target="_blank">{{ feed.title }}</a></td>
                            <td>{{ feed.content | raw }}</td>
                            <td>{{ feed.published|format_datetime('medium', 'short', '', 'UTC') }}</td>
                            <td>{{ feed.sourceName }}{% if feed.author %} - {{ feed.author }}{% endif %}</td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" align="center">{{ 'marker.no_markers_found'|trans }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            {% else %}
                <div class="full-width">
                    <h4>{{ 'marker.no_rss_feed_found'|trans }}</h4>
                </div>
                <div>
                    <div class="section actions">
                        <a href="{{ path('admin_rss_feed_new') }}" class="btn btn-lg btn-success">
                            <i class="fa fa-plus" aria-hidden="true"></i> {{ 'action.create_rss_feed'|trans }}
                        </a>
                        <a href="{{ path('admin_rss_feed_index') }}" class="btn btn-link">
                            <i class="fa fa-list-alt" aria-hidden="true"></i> {{ 'action.show_rss_feed_list'|trans }}
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

{% block sidebar %}
    <div class="section actions">
        <a href="{{ path('admin_marker_new') }}" class="btn btn-lg btn-block btn-success">
            <i class="fa fa-plus" aria-hidden="true"></i> {{ 'action.create_marker'|trans }}
        </a>
    </div>

    {{ parent() }}

{% endblock %}

